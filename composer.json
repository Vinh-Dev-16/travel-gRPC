{
  "name": "travel/grpc-proto",
  "description": "Shared gRPC proto definitions and generated PHP code for Travel services",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Travel Team",
      "email": "dev@travel.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "google/protobuf": "^4.29.0",
    "grpc/grpc": "^1.57"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Travel\\": "src/Travel/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Travel\\Proto\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "generate": [
      "@php -r \"echo 'Generating PHP code from proto files...\\n';\"",
      "bash scripts/generate.sh"
    ],
    "test": "phpunit"
  }
}
